											<!--end::Item-->
										</div>
										<!--end::Breadcrumb-->
									</div>
									<!--end::Heading-->
								</div>
								<!--end::Info-->

							</div>
						</div>
						<!--end::Subheader-->
						<!--begin::Entry-->
						<div class="d-flex flex-column-fluid">
							<!--begin::Container-->
							<div class="container">
                                <!--begin::Dashboard-->
                                <div class="card card-custom">
                                    <!--begin::Row-->
                                <div class="row">
                                    <div class="card-body">
                                        <!--begin: Datatable-->
                                        <table id="table_id1" class="table table-separate table-head-custom table-checkable" data-page-length="50">
                                            <thead style="text-align:center">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Mã Cuộc thi</th>
                                                    <th>Tên cuộc thi</th>
                                                    <th>Thời gian bắt đầu</th>
                                                    <th>Thời lượng</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody style="text-align:center" class="display-all-contests">
                                              <% for(var i = 0; i < contests.length; i++){ %>
                                                <tr id="<%= i %>">
                                                  <td><%= i+1 %></td>
                                                  <td>
                                                    <%= contests[i].code %>
                                                  </td>
                                                  <td>
                                                    <%= contests[i].name %>
                                                  </td>
                                                  <td>
                                                    <%= contests[i].dt %> <%= contests[i].tm %>
                                                  </td>
                                                  <td>
                                                    <%= contests[i].dur %>
                                                  </td>
                                                  <td>
                                                    <a href="/contests/<%= contests[i].code %>">
                                                      <button type="button" class="btn btn-success btn-sm">
                                                        Tham gia
                                                      </button>
                                                    </a>
                                                  </td>
                                                </tr>
                                                <% } %>
												
                                            </tbody>
                                        </table>
                                        <!--end: Datatable-->
                                    </div>
                                </div>

                                </div>
								
							</div>
							<!--end::Container-->
						</div>
						<!--end::Entry-->
						<!--begin::Subheader 2-->
						<div class="subheader py-2 py-lg-12 subheader-transparent" id="kt_subheader">
							<div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
								<!--begin::Info-->
								<div class="d-flex align-items-center flex-wrap mr-1">
									<!--begin::Heading-->
									<div class="d-flex flex-column">
										<!--begin::Title-->
										<h2 class="font-weight-bold my-2 mr-5" style="color: black;">Cuộc thi đã diễn ra</h2>
										<!--end::Title-->
										<!--begin::Breadcrumb-->

									</div>
									<!--end::Heading-->
								</div>
								<!--end::Info-->

							</div>
						</div>
						
                        <!--end::Subheader 2-->
                        <!--begin::Entry-->
						<div class="d-flex flex-column-fluid">
							<!--begin::Container-->
							<div class="container">
                                <!--begin::Dashboard-->
                                <div class="card card-custom">
                                    <!--begin::Row-->
                                <div class="row">
                                    <div class="card-body">
                                        <!--begin: Datatable-->
										                    <table id="table_id" class="table table-separate table-head-custom table-checkable">
                                            <thead style="text-align:center">
                                                <tr>
                                                  <th>STT</th>
                                                    <th>Mã Cuộc thi</th>
                                                    <th>Tên cuộc thi</th>
