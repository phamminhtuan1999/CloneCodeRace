	<body id="kt_body" style="background-image: url(/media/bg/bg-10.jpg)" class="quick-panel-right demo-panel-right offcanvas-right header-fixed subheader-enabled page-loading">
		<!--begin::Main-->

		<div class="d-flex flex-column flex-root">
			<!--begin::Page-->
			<div class="d-flex flex-row flex-column-fluid page">
				<!--begin::Wrapper-->
				<div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
		        <% include partials/menu_admin %>
              					<!--begin::Content-->
					<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
						<div class="subheader py-2 py-lg-12 subheader-transparent" id="kt_subheader">
							<div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
								<!--begin::Info-->
								<div class="d-flex align-items-center flex-wrap mr-1">
									<!--begin::Heading-->
									
										<div class="d-flex flex-column">
												<!--begin::Title-->
												<h2 class="text-white font-weight-bold my-2 mr-5">Sửa cuộc thi</h2>
												<!--end::Title-->
												<!--begin::Breadcrumb-->
												<div class="d-flex align-items-center font-weight-bold my-2">
													<!--begin::Item-->
													<a href="#" class="opacity-75 hover-opacity-100">
														<i class="flaticon2-shelter text-white icon-1x"></i>
													</a>
													<!--end::Item-->
													<!--begin::Item-->
													<span class="label label-dot label-sm bg-white opacity-75 mx-3"></span>
													<a href="" class="text-white text-hover-white opacity-75 hover-opacity-100">Quản lý</a>
													<!--end::Item-->
													<!--begin::Item-->
													<span class="label label-dot label-sm bg-white opacity-75 mx-3"></span>
													<a href="" class="text-white text-hover-white opacity-75 hover-opacity-100">Chỉnh sửa cuộc thi</a>
													<!--end::Item-->
												</div>
												<!--end::Breadcrumb-->
										</div>
									<!--end::Heading-->								
								</div>
								
							</div>
						</div>
						<!--end::Subheader-->
						<div class="d-flex flex-column-fluid">
							<!--begin::Container-->
							<div class="container">
								
							<!--begin::Row-->
                            <div class="row">
                                
                                <div class="col-lg-12">
                                    <!--begin::Card-->
                                    <div class="card card-custom">
                                       
                                        <form class="contest-form" action="/admin/edit-contest/<%= data.code %>" method="POST" style="width:100%">
											<div class="card-body">
												<div class="form-group row">
													<label for=""> Mã đề thi: <%= data.code %><span style="color: red;">*</span></label>
													
												  </div>
												  <div class="form-group row">
													<label for=""> Tên đề thi: <span style="color: red;">*</span></label>
													<input type="text" name="contestName" id="" class="form-control" placeholder="" aria-describedby="helpId" value="<%= data.name %>">
												  </div>
												  <div class="form-group row">
													<label for=""> Ngày thi: <span style="color: red;">*</span></label>
													<input type="date" name="date" id="" class="form-control" placeholder="" aria-describedby="helpId" value="<%= data.YY %>-<%= data.MM %>-<%= data.DD %>">
												  </div>
												  <div class="form-group row">
													<label for="">TG bắt đầu: <span style="color: red;">*</span></label>
													<input type="time" name="startTime" id="" class="form-control" placeholder="" aria-describedby="helpId" value="<%= data.TT %>">
												  </div>
												  <div class="form-group row">
													<label for="">TG thi (phút): <span style="color: red;">*</span></label>
													<input type="text" name="duration" id="" class="form-control" placeholder="" aria-describedby="helpId" value="<%= data.duration %>">
												  </div>
												  <div>Bạn muốn để cuộc thi công khai?
													<select name="visibility">
														<option value="" <% if (data.visible == false) { %>selected<% } %> >No</option>
														<option value="1" <% if (data.visible == true) { %>selected<% } %> >Yes</option>
													</select>
													<br></div>
												  <div class="form-group row">
													<label for="">Thêm BT vào cuộc thi (qID "," comma separated):</label>
													<input type="text" name="problemsID" id="" class="form-control" placeholder="" aria-describedby="helpId" value="<%= data.problemsID %>">
												  </div>
												  <button type="submit" class="btn btn-danger btn-md">Chỉnh sửa cuộc thi</button>
											</div>

											
											
									
										</form>
                                    </div>
                                    <!--end::Card-->
                                </div>
                            
							</div>
							<!--end::Container-->
						</div>
						<!--end::Entry-->
					    </div>
					</div>
				<% include partials/footer %>
			</div>
			<!--end::Wrapper-->
		</div>
			<!--end::Page-->
	</div>
