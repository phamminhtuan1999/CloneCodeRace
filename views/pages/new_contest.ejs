                                    <!--begin::Card-->
                                    <div class="card card-custom">
                                       
                                        <!--begin::Form-->
                                        <form  action="/admin/new-contest" method="POST" >
                                            
                                            <div class="card-body">
                                                <div class="form-group form-group-last">
                                                    <div class="alert alert-custom alert-default" role="alert">
                                                    <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                                                    <div class="alert-text">
                                                        Lưu ý: Những mục có dấu <code>*</code> yêu cầu người dùng phải điền đủ thông tin.
                                                    </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-3 col-form-label text-lg-right" >Người tạo đề thi <span class="text-danger">*</span></label>
                                                    <div class="col-lg-7"> 
                                                        <input type="textarea" class="form-control form-control-lg" name="Creator" id="Creator" value="<%= locals.user.username %>"/>
                                                    </div>
                                                    
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-lg-3 col-form-label text-lg-right" >Mã đề thi <span class="text-danger">*</span></label>
                                                    <div class="col-lg-7"> 
                                                        <input type="textarea" class="form-control form-control-lg" name="contestCode" id="contestCode" placeholder=""/>
                                                    </div>
                                                    
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-3 col-form-label text-lg-right">Tên đề thi<span class="text-danger">*</span></label>
                                                    <div class="col-lg-7"> 
                                                        <input type="textarea" class="form-control form-control-lg" name="contestName" id="contestName"  placeholder=""/>
                                                    </div>                                                
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-3 col-form-label text-lg-right">Ngày bắt đầu<span class="text-danger">*</span></label>
                                                    <div class="col-lg-7">
                                                        <div class="input-group date">
                                                            <input type="text" class="form-control form-control-lg" name="date"  readonly="readonly" placeholder="Select date" id="kt_datepicker_2_modal" value="<%= data.YY %>-<%= data.MM %>-<%= data.DD %>" />
                                                            <div class="input-group-append">
                                                                <span class="input-group-text">
                                                                    <i class="la la-calendar-check-o"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>  
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-3 col-form-label text-lg-right">Thời gian bắt đầu<span class="text-danger">*</span></label>
                                                    <div class="col-lg-7">
                                                        <div class="input-group timepicker">
                                                        <div class="input-group-prepend">
                                                         <span class="input-group-text">
                                                          <i class="la la-clock-o"></i>
                                                         </span>
                                                        </div>
                                                        <input class="form-control" name="startTime" id="kt_timepicker_3" readonly placeholder="Select time" type="text" />
                                                       </div>
                                                      </div>
                                                     
                                                   </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-3 col-form-label text-lg-right">Thời gian thi<span class="text-danger">*</span></label>
                                                    <div class="col-lg-7">
                                                        <input type="number" name="duration" id="duration" class="form-control form-control-lg"  placeholder=""/>
                                                    </div>
                                                </div>
                                               
                                                <div class="form-group row">
                                                    <label for="exampleSelect1" class="col-lg-3 col-form-label text-lg-right">Bạn có muốn public đề thi <span class="text-danger">*</span></label>
                                                    <div class="col-lg-7">
                                                        <select class="form-control"  name="visibility" id="exampleSelect1">
                                                            <option value="1">Có</option>
                                                            <option value="0">Không</option>
                                                           
                                                           </select>
                                                    </div>
                                                    
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-3 col-form-label text-lg-right">Thêm bài tập vào cuộc thi(qID)<span class="text-danger">*</span></label>
                                                    <div class="col-lg-7">
                                                        <input type="textarea" class="form-control form-control-lg" name="problemsID" placeholder="Ví dụ:1,2,3,4,5"/>
                                                    </div>
                                                    
                                                </div>
                                                
                                                
                                                

                                            </div>
                                            <div class="card-footer">
                                                <div class="row">
                                                    <div class="col-lg-3"></div>
                                                    <div class="col-lg-9">
                                                        <button type="submit" class="btn btn-light-primary mr-2">Tạo cuộc thi</button>
                                                        <button type="reset" class="btn btn-primary">Thoát</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <!--end::Form-->
                                        <div class="card-body">
                                            <!--begin: Datatable-->
                                            <table id="table_id" class="table table-separate table-head-custom table-checkable" data-page-length="50">
                                                <thead style="text-align:center">
                                                    <tr>
                                                        <th style="width:3%">ID</th>
                                                        <th style="width:43%">Đề bài</th>
                                                        <th style="width:12%">Chủ đề</th>
                                                        <th style="width:10%">Độ khó</th>
                                                        <th style="width:10%">Công khai</th>
    
                                                    </tr>
                                                </thead>
                                                <tbody style="text-align: center;word-wrap:break-word; ">
                                                    <% for(var i = 0; i < data.length; i++) { %>
                                                    <tr>
                                                        <td>
                                                                #<%= data[i].qID %>
                                                        </td>
                                                        <td>
                                                            <latex-js>
                                                            <%= data[i].name %>&ensp;
                                                            </latex-js>
                                                        </td>
                                                        <td style="word-wrap:break-word; ">
                                                                <%= data[i].tags %>.                                                     
                                                        </td>
                                                        <td> 
                                                            <%= data[i].difficulty %>
                                                        </td>
                                                        <td> 
                                                            <%= data[i].isVisible %>
                                                        </td>
                                                       
                                                    </tr>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                            <!--end: Datatable-->
                                        </div>
                                                
                                            
                                        
                                    </div>
                                    <!--end::Card-->
                                    
                                </div>
                            
							</div>
							<!--end::Container-->
						</div>
						<!--end::Entry-->
					    </div>
					    <!--end::Content-->
                        
						<!--end::Entry-->
					</div>
					<!--end::Content-->
